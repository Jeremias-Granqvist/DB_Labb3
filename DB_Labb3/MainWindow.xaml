<Window x:Class="DB_Labb3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_Labb3"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    Grid.Row="0"
                    BorderThickness="1"
                    BorderBrush="Gray" />
            <Label Content="Add Category:"
                   Height="25"
                   Width="100"
                   Margin="33,46,534,252" />
            <TextBox x:Name="AddCategoryTB"
                     Height="25"
                     Width="200"
                     Margin="195,46,272,252" />

            <Label Content="Pick Category:"
                   Height="25"
                   Width="100"
                   Margin="33,114,534,184" />
            <ComboBox Height="25"
                      Width="100"
                      Margin="195,114,372,184">
                
            </ComboBox>

            <RadioButton x:Name="ToDoRB"
                         GroupName="ToDoNote" 
                         Content="ToDo"
                         Height="25"
                         Width="50"
                         Margin="431,115,186,183" />

            <RadioButton x:Name="NoteRB"
                         GroupName="ToDoNote" 
                         Content="Note"
                         Height="25"
                         Width="50"
                         Margin="527,114,90,184" />
            
            <Label Content="Write your ToDo/Note:"
                   Height="25"
                   Width="140"
                   Margin="33,200,494,98" />

            <TextBox x:Name="ToDoNoteTB"
                       Height="50"
                       Width="200"
                     Margin="195,212,272,61" />
        </Grid>
        <Border Grid.Column="0"
                Grid.Row="1"
                BorderThickness="1"
                BorderBrush="Gray" />
    </Grid>
</Window>
